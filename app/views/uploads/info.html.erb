<%= render 'shared/organization_header' %>

<div class="container">
  <h2><%= @blob.filename %></h2>

  <%= @blob.byte_size %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Description</th>
        <th>Fields</th>
        <th>Info</th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td></td>
          <td>001</td>
          <td><%= @marc_profile.record_frequency["001"] %> of <%= @blob.metadata["count"] %></td>
        </tr>
        <tr>
          <td>MHLD information</td>
          <td>85x, 86x, 87x</td>
          <td>85x: <%= @marc_profile.record_frequency.keys.any? {|field| field.start_with?("85")} %><br>
          86x: <%= @marc_profile.record_frequency.keys.any? {|field| field.start_with?("86")} %><br>
          87x: <%= @marc_profile.record_frequency.keys.any? {|field| field.start_with?("87")} %></td>
        </tr>
        <tr>
          <td>Mutilingual data</td>
          <td>88x</td>
          <td><%= @marc_profile.record_frequency.keys.any? {|field| field.start_with?("88")} %></td>
        </tr>
    </tbody>
  </table>

  <h3>Non-standard fields</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Field</th>
        <th>Subfields</th>
        <th>Sample values</th>
      </tr>
    </thead>
    <tbody>
      <% @marc_profile.sampled_values.reject {|key,value| MarcRules.common_practice?(*key.split("$",2)) }.sort_by {|key,value| key}.each do |field,values| %>
        <tr>
          <td><%= field.split("$").first %></td>
          <td><%= field.split("$").last if field.include?("$") %></td>
          <td><%= safe_join(values.uniq,'<br>'.html_safe) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
